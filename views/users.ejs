<%- include("shared/header") %>

<div class="container my-4">
  <div class="row">
    <div class="col-md-12">
      <%- include("shared/flash") %>
      
      <div class="row mb-3">
        <div class="col-md-6"><h1>Users (<%= count %>)</h1></div>
        <div class="col-md-6 d-flex align-items-center justify-content-end">
          <!-- <a href="/users/new" class="btn btn-primary">New project</a> -->
        </div>
      </div>

      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Active</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user) { %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= user.firstName %> <%= user.lastName %>
              </td>
              <td><%= user.active ? "Yes" : "No" %></td>
              <td>
                <form action="/admin/users/<%= user.id %>?_method=PUT" method="post">
                  <input type="hidden" name="mode" value="activate">
                  <button type="submit" class="btn btn-link">Activate</button>
                </form>
              </td>
              <td>
                <form action="/admin/users/<%= user.id %>?_method=PUT" method="post">
                  <input type="hidden" name="mode" value="deactivate">
                  <button type="submit" class="btn btn-link">Deactivate</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include("shared/footer") %>
