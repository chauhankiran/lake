<%- include("shared/header") %>

<div class="container my-4">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-3">Edit issue</h1>
      <div class="row">
        <div class="col-md-6">
          <form action="/issues/<%= issue.id %>?_method=PUT" method="post">
            <div class="mb-3">
              <label for="projectId">Project</label>
              <select name="projectId" id="projectId" class="form-select">
                <% projects.forEach(function (project) { %>
                  <% if (project.id == issue.projectId) { %>
                    <option value="<%= project.id %>" selected><%= project.name %></option>
                  <% } else { %>
                    <option value="<%= project.id %>"><%= project.name %></option>
                  <% } %>
                <% }) %>
              </select>
            </div>
            
            <div class="mb-3">
              <label for="title">Title</label>
              <input type="text" name="title" id="title" class="form-control" placeholder="Login is not working on home page" value="<%= issue.title %>">
            </div>

            <div class="mb-3">
              <label for="description">Description</label>
              <textarea name="description" id="description" cols="30" rows="10" class="form-control"><%= issue.description %></textarea>
            </div>

            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Update issue</button>
            </div>
          </form>
        </div>
        <div class="col-md-6"></div>
      </div>
    </div>
  </div>
</div>

<%- include("shared/footer") %>
