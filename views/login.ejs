<%- include("shared/header") %>

<div class="container my-4">
  <div class="row">
    <div class="col-md-12">
      <%- include("shared/flash") %>
      
      <h1 class="mb-3">Login</h1>
      <div class="row">
        <div class="col-md-6">
          <form action="/login" method="post">
            <!-- Email -->
            <div class="mb-3">
              <label for="email">Email</label>
              <input type="text" name="email" id="email" class="form-control" placeholder="kai@doe.com">
            </div>
            
            <!-- Password -->
            <div class="mb-3">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" class="form-control" placeholder="Super secret">
            </div>

            <!-- Login button -->
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </form>
        </div>
        <div class="col-md-6"></div>
      </div>
    </div>
  </div>
</div>

<%- include("shared/footer") %>
