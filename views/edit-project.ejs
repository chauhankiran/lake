<%- include("shared/header") %>

<div class="container my-4">
  <div class="row">
    <div class="col-md-12">
      <%- include("shared/flash") %>
      
      <h1 class="mb-3">Edit project</h1>
      <div class="row">
        <div class="col-md-6">
          <form action="/projects/<%= project.id %>?_method=PUT" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="name">Name</label>
              <input type="text" name="name" id="name" class="form-control" placeholder="Example" value="<%= project.name %>" required>
              <div class="invalid-feedback">
                Project name is required.
              </div>
            </div>

            <div class="mb-3">
              <label for="key">Key</label>
              <input type="text" name="key" id="key" class="form-control" placeholder="EX" value="<%= project.key %>" required>
              <div class="invalid-feedback">
                Key is required.
              </div>
            </div>

            <div class="mb-3">
              <label for="completionDate">Completion date</label>
              <input type="date" name="completionDate" id="completionDate" class="form-control" value="<%= project.completionDate %>">
            </div>

            <div class="mb-3">
              <label for="description">Description</label>
              <textarea name="description" id="description" cols="30" rows="10" class="form-control" placeholder="Optional project description"><%= project.description %></textarea>
            </div>

            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Update project</button>
            </div>
          </form>
        </div>
        <div class="col-md-6"></div>
      </div>
    </div>
  </div>
</div>

<%- include("shared/footer") %>
